{
  "name": "ask.seba-deployment",
  "version": "1.0.0",
  "description": "Dependencies والملفات المطلوبة لنشر ask.seba",
  "dependencies": {
    "posthog-js": "^1.115.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "installation": {
    "step1": "npm i posthog-js @playwright/test",
    "step2": "npm run build",
    "step3": "npm run lint",
    "step4": "npm run test:e2e"
  },
  "notes": {
    "posthog": "مكتبة التحليلات - تتبع الأحداث والمستخدمين",
    "playwright": "أداة الاختبار - اختبارات E2E شاملة",
    "next": "إصدار Next.js المتوافق: 13.x أو أحدث"
  },
  "compatibility": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "files": {
    "config": [
      "next.config.js",
      "manifest.json"
    ],
    "lib": [
      "posthog-client.ts"
    ],
    "hooks": [
      "useAnalytics.ts"
    ],
    "tests": [
      "faq.spec.ts"
    ],
    "docs": [
      "Content-Specification-ask.seba.md",
      "Acceptance-Criteria-ask.seba-Pages.md",
      "Cursor-Prompt-ask.seba-Pages-Implementation.md"
    ],
    "content": [
      "content.json"
    ]
  },
  "deployment": {
    "platform": "Vercel / Self-hosted",
    "buildCommand": "npm run build",
    "startCommand": "next start",
    "outputDirectory": ".next"
  },
  "status": "✅ جاهز للإنتاج",
  "lastUpdated": "2026-01-13"
}
